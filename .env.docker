# Docker Compose Environment Variables
# These are used when running with docker-compose

# PostgreSQL Configuration
POSTGRES_USER=medusa_user
POSTGRES_PASSWORD=medusa_password
POSTGRES_DB=medusa_db
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PORT=6379

# Medusa Configuration
MEDUSA_PORT=9000

# Database URL (used by Medusa)
DATABASE_URL=postgresql://medusa_user:medusa_password@postgres:5432/medusa_db

# Redis URL (used by Medusa)
REDIS_URL=redis://redis:6379

# Secrets (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your_jwt_secret_change_this
COOKIE_SECRET=your_cookie_secret_change_this

# CORS Settings
STORE_CORS=http://localhost:8000
ADMIN_CORS=http://localhost:9000,http://localhost:5173
AUTH_CORS=http://localhost:9000,http://localhost:5173

# Node Environment
NODE_ENV=development

